#include <cs50.h>
#include <stdio.h>

int main(void) {
    int h = 8;
    
    while(h < 1 || h > 8);
    for(int j=1; j<=h; j++){
        for(int i = 1; i<j; i++){
            printf("#");
        }
        for(int k = h ; k>=j; k--){
            printf(" ");
        }
        printf("\n");
    }
}
